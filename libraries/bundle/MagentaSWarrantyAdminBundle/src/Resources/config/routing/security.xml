<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="magenta_user_security_login" path="/login" methods="GET POST">
        <default key="_controller">Magenta\Bundle\SWarrantyAdminBundle\Controller\SecurityController:loginAction</default>
    </route>

    <route id="magenta_user_security_check" path="/login_check" methods="POST">
        <default key="_controller">Magenta\Bundle\SWarrantyAdminBundle\Controller\SecurityController:checkAction</default>
    </route>

    <route id="magenta_user_security_logout" path="/logout" methods="GET POST">
        <default key="_controller">Magenta\Bundle\SWarrantyAdminBundle\Controller\SecurityController:logoutAction</default>
    </route>

</routes>
